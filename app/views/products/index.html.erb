<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <h2 class="sr-only">Products</h2>
    <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
		<%@products.each do |product|%>
			<%= link_to product_path(product.id), target: '_blank' do%>
			  <%if product.image.present?%>
		        <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
			    <%=image_tag product.image, class:'h-full w-full object-cover object-center group-hover:opacity-75'%>
		        </div>
			  <%end%>
		        <h3 class="mt-4 text-sm text-gray-700"><%= product.name%></h3>
		        <p class="mt-1 text-lg font-medium text-gray-900"><%=number_to_currency product.price%></p>
			<%end%>
		<%end%>
      <!-- More products... -->
    </div>
  </div>
</div>

