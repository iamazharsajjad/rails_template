<h1>Order History</h1>
<ul role="list" class="divide-y divide-gray-100">
  <%@orders.each do |order|%>
    <li class="flex justify-between gap-x-6 py-5">
      <div class="flex gap-x-4">
        <div class="min-w-0 flex-auto">
          <p class="text-sm font-semibold leading-6 text-gray-900"><%=order.customer_name%></p>
          <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%=order.user.email%></p>  
        </div>
      </div>
    </li>
  <%end%>
</ul>
