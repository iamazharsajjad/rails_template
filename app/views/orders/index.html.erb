<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <div class="card bg-white py-3 px-5 rounded-xl flex flex-col mb-5">
    <h2 class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Order History</h2><br>
    <% flash.each do |type, msg| %>
      <div class="w-full">
          <div class="py-3 px-5 mb-4 bg-blue-100 text-blue-900 text-sm rounded-md border border-blue-200 flex items-center justify-between" role="alert">
              <span><%= msg%></span>
              <button class="w-4" type="button" data-dismiss="alert" aria-label="Close" onclick="this.parentElement.remove();">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                  </svg>
              </button>
          </div>

      </div>
    <% end %>

      <ul role="list" class="divide-y divide-gray-100">
        <%@orders.each do |order|%>
          <li class="flex justify-between gap-x-6 py-5">
            <div class="flex gap-x-4">
              <div class="min-w-0 flex-auto">
                <p class="text-sm font-semibold leading-6 text-gray-900"><%=order.customer_name%></p>
                <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%=order.user.email%></p>
              </div>
            </div>
            <div class="hidden sm:flex sm:flex-col sm:items-end">
              <p class="text-sm leading-6 text-gray-900">Shipping Address: <%=order.shipping_address%></p>
              <p class="mt-1 text-xs leading-5 text-gray-500">Place on: <time datetime="2023-01-23T13:23Z"><%=order.created_at.to_date%></time></p>
            </div>
          </li>  
        <%end%>
      </ul>
      <div class="mt-6 flex justify-center text-center text-sm text-gray-500">
        <p>
          <%=link_to root_path, class:"font-medium text-indigo-600 hover:text-indigo-500" do%>
            Continue Shopping
            <span aria-hidden="true"> &rarr;</span>
          <%end%>
        </p>
      </div>
  </div>
</div>